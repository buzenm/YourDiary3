            <AppBarButton Icon="Edit" Label="写" Name="AddAppBarButton" Click="AddAppBarButton_Click"></AppBarButton>
            <AppBarButton Icon="Sync" Label="同步" Name="SyncAppBarButton" Click="SyncAppBarButton_Click"></AppBarButton>
